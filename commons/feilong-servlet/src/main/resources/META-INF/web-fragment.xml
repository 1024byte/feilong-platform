<?xml version="1.0" encoding="UTF-8"?>
<web-fragment version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-fragment_3_0.xsd">

	<name>common</name>

	<context-param>
		<param-name>logbackConfigLocation</param-name>
		<param-value>classpath:logback.xml</param-value>
	</context-param>

	<listener>
		<listener-class>ch.qos.logback.ext.spring.web.LogbackConfigListener</listener-class>
	</listener>

	<!-- -->
	<listener>
		<listener-class>com.feilong.servlet.listener.ServletContextPathListener</listener-class>
	</listener>

	<servlet>
		<servlet-name>applicationInfo</servlet-name>
		<servlet-class>com.feilong.servlet.servlet.ApplicationInfoServlet</servlet-class>
		<!-- 只接收一个整型值，这个整型值越小，Servlet就越优先实例化 -->
		<load-on-startup>999</load-on-startup>
	</servlet>


	<jsp-config>
		<jsp-property-group>
			<url-pattern>*.jsp</url-pattern>
			<trim-directive-whitespaces>true</trim-directive-whitespaces>
			<!-- <el-ignored>false</el-ignored> -->
			<page-encoding>UTF-8</page-encoding>
		</jsp-property-group>
	</jsp-config>

	<!--默认页面 -->
	<welcome-file-list>
		<welcome-file>/</welcome-file>
	</welcome-file-list>

	<session-config>
		<session-timeout>10</session-timeout>
	</session-config>

	<!--********************************** servlet ********************************** -->
	<servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>*.jpg</url-pattern>
		<url-pattern>*.png</url-pattern>
		<url-pattern>*.gif</url-pattern>
		<url-pattern>*.ico</url-pattern>
		<url-pattern>*.js</url-pattern>
		<url-pattern>*.css</url-pattern>
		<url-pattern>*.html</url-pattern>
		<url-pattern>*.swf</url-pattern>
		<url-pattern>*.xml</url-pattern>
	</servlet-mapping>
</web-fragment>