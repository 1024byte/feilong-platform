<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

	<bean id="excelManipulatorFactory" class="loxia.support.excel.ExcelManipulatorFactory">
		<property name="config">
			<value>feilong-excel-template.xml</value>
		</property>
	</bean>

	<!-- 报名读取 -->
	<bean id="trainSignUpReader" factory-bean="excelManipulatorFactory" factory-method="createExcelReader">
		<constructor-arg>
			<value>trainSignUpSheet</value>
		</constructor-arg>
	</bean>

	<!-- 签到 -->
	<bean id="attendanceWriter" factory-bean="excelManipulatorFactory" factory-method="createExcelWriter">
		<constructor-arg>
			<value>attendanceSheet</value>
		</constructor-arg>
	</bean>
</beans>