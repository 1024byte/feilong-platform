<!DOCTYPE log4j:configuration SYSTEM "http://logging.apache.org/log4j/1.2/apidocs/org/apache/log4j/xml/doc-files/log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">

	<appender name="stdout" class="org.apache.log4j.ConsoleAppender">
		<!-- The default target is System.out. -->
		<!-- <param name="Target" value="System.out" /> -->
		<param name="Threshold" value="debug" />
		<param name="encoding" value="UTF-8" />

		<!-- 设置监视器输出方式 -->
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{HH:mm:ss} %-5p (%F:%L) [%M()] %m%n" />
		</layout>
		<!--限制输出级别 -->
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="debug" />
			<param name="LevelMax" value="ERROR" />
		</filter>
	</appender>


	<category name="org.hibernate">
		<priority value="info" />
	</category>
	<category name="org.springframework">
		<priority value="info" />
	</category>

	<category name="org.springframework.web.servlet.mvc.annotation.AnnotationMethodHandlerAdapter">
		<priority value="info" />
	</category>

	<category name="com.feilong">
		<priority value="debug" />
	</category>
	<category name="com.feilong.commons.core.util.RegexUtil">
		<priority value="info" />
	</category>

	<category name="com.feilong.commons.core.security" additivity="false">
		<priority value="debug" />
	</category>

	<category name="com.feilong.tools.velocity.log.SLF4JLogChute" additivity="false">
		<priority value="info" />
	</category>

	<category name="feilongVelocityLogger" additivity="false">
		<priority value="info" />
	</category>

	<category name="com.feilong.commons.core.io.FileUtil" additivity="false">
		<priority value="info" />
	</category>

	<category name="org.apache.commons.beanutils">
		<priority value="info" />
	</category>

	<category name="elsepackage.code.CodeGenerator">
		<priority value="info" />
	</category>

	<category name="loxia.support.json">
		<priority value="warn" />
	</category>
	<category name="elsepackage">
		<priority value="debug" />
	</category>

	<!-- 设置接收所有输出的通道 -->
	<root>
		<level value="debug" />
		<appender-ref ref="stdout" />
	</root>
</log4j:configuration>