	<!-- 开发模式 -->
	<constant name="struts.devMode" value="true" />

	<!-- 
	namespace属性决定了action访问路径,默认为"",可以接收所有路径的action 
	namespace的值可以写成/,或者/***,或者/***/****
	namespace必须以/开头
	最好用模块来进行命名	
	
	package 用来区分重名的情况
	 -->
	<package name="struts2" extends="struts-default" namespace="/">
	
	<!-- 如果没有写namespace,那么 只要路径里面有login,一旦没有精准匹配,那么就匹配这个路径
	也就是说namespace不指定的话,....
	 -->
		<action name="login" class="com.feilong.struts2.action.LoginAcion">
			<!-- 凡是 name 是success 的result ,name=success 可以不写 -->			
			<result >/result.jsp</result>
		</action>

		<action name="userAction" class="com.feilong.struts2.action.UserAction">
			<result name="success" type="redirect">/resultAction</result>
		</action>
		<!-- 当不配置class的时候,默认执行的是 com.opensymphony.xwork2.ActionSupport -->
		<action name="test" >
			<result>/test.jsp</result>
		</action>

		<action name="loginJSP" >
			<result>/login.jsp</result>
		</action>
		
		<action name="resultAction" class="com.feilong.struts2.action.ResultAction">
			<result name="success">null</result>
		</action>
	</package>
</struts>