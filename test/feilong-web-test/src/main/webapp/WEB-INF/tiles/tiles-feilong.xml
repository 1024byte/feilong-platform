<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

	<definition name="feilong.index" extends="feilong.basic">
		<put-attribute name="center" value="/index.jsp" />
	</definition>

	<definition name="feilong.helloworld" extends="feilong.basic">
		<put-attribute name="center" value="/jsp/j2ee/helloworld.jsp" />
	</definition>

	<definition name="feilong.*.*.*" extends="feilong.basic">
		<!-- {0} 表示精确的 definition name 比如 feilong.css.feilongCleanlily15 -->
		<put-attribute name="left" value="/jsp/commons/blank.jsp" />
		<put-attribute name="center" value="/jsp/{1}/{2}/{3}.jsp" />
	</definition>

	<definition name="feilong.*.*" extends="feilong.basic">
		<!-- {0} 表示精确的 definition name 比如 feilong.css.feilongCleanlily15 -->
		<put-attribute name="center" value="/jsp/{1}/{2}.jsp" />
	</definition>

</tiles-definitions>