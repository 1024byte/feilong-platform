	<artifactId>feilong-web-test</artifactId>
	<name>feilong-web-test</name>
	<packaging>jar</packaging>

	<properties>
		<tomcatPlugin.port>80</tomcatPlugin.port>
		<tomcatPlugin.path>/</tomcatPlugin.path>

		<scope.feilong-common-test>compile</scope.feilong-common-test>
	</properties>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<!-- 2.4才支持的属性 Default value is: false. -->
					<includeEmptyDirectories>true</includeEmptyDirectories>
					<!-- Maven使用本地jar包并打包进war包里面的方法 -->
					<webResources>
						<resource>
							<directory>${project.basedir}/lib</directory>
							<targetPath>WEB-INF/lib</targetPath>
							<filtering>true</filtering>
							<includes>
								<include>**/*.jar</include>
							</includes>
						</resource>
					</webResources>
				</configuration>
			</plugin>
		</plugins>
	</build>

