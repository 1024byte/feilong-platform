<project name="feilong-weather" basedir="." default="feilongOpenTest-feilong" xmlns:artifact="antlib:org.apache.maven.artifact.ant">
	<property file="E:/Data/java/Taglib/Apache Ant/config/build-feilong.properties" />
	<property name="app.name" value="${ant.project.name}" />

	<property name="deploy.home" value="${basedir}/src/main/webapp" />
	<property name="path.tomcat.localhost" value="${path.tomcat}/work/Catalina/localhost/${app.name}" />
	
	
	<path id="path.maven-ant-tasks" path="${path.maven-ant-tasks.jar}" />
	
	<typedef classpathref="path.maven-ant-tasks"  resource="org/apache/maven/artifact/ant/antlib.xml" uri="antlib:org.apache.maven.artifact.ant" />

	<!--lib 文件夹是否存在-->
	<condition property="boolean.exist.lib" value="true" else="false">
		<available file="lib" filepath="${deploy.home}/WEB-INF/" type="dir" />
	</condition>



	<!--copy lib-->
	<target name="feilongCopyMavenDependenciesLib">
		<description>copy lib</description>
		<artifact:dependencies filesetId="project.dep.fileset" useScope="runtime">
			<pom file="pom.xml" />
		</artifact:dependencies>

		<delete dir="${deploy.home}/WEB-INF/lib" />
		<mkdir dir="${deploy.home}/WEB-INF/lib" />

		<copy todir="${deploy.home}/WEB-INF/lib">
			<fileset refid="project.dep.fileset" />
			<mapper type="flatten" />
		</copy>

	</target>
 

	<!-- *************************************************** -->

	<target name="feilongOpenTest">
		<description>打开测试网页</description>
		<exec executable="cmd">
			<arg line="/c start ${url.localhost}/${app.name}" />
		</exec>
	</target>

	<target name="feilongOpenTest-feilong">
		<description>打开飞龙测试网页</description>
		<exec executable="cmd">
			<arg line="/c start ${url.feilong}/${app.name}/" />
		</exec>
	</target>

	<target name="feilongOpenTestWithChrome">
		<description>使用谷歌浏览器打开测试网页</description>
		<exec executable="cmd">
			<arg line="/c start '' '${path.Chrome}' '${url.localhost}/${app.name}/'" />
		</exec>
	</target>

	<target name="feilongOpenDeployDir">
		<description>打开部署的文件夹</description>
		<exec executable="explorer">
			<arg path="${deploy.home}" />
		</exec>
	</target>

	<target name="feilongDeleteTomcatWork">
		<description>删除tomcat里面项目对应的Work文件</description>
		<delete dir="${path.tomcat.localhost}" />
	</target>

	<target name="feilongDeleteTomcatTemp">
		<description>删除tomcat Temp临时文件</description>
		<delete includeEmptyDirs="true">
			<fileset dir="${path.tomcat.temp}" includes="**/*" />
		</delete>
	</target>
</project>